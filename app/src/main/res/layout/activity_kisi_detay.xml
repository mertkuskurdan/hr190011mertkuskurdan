<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KisiDetayActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgKapak"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_kisi_detay_imgKapak_height"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_kisi_detay_txtBaslik_padding"
                android:text="@string/txtBaslik"
                android:textColor="@color/activity_kisi_detay_baslik"
                android:textSize="@dimen/activity_kisi_detay_txtBaslik_textSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_kisi_detay_txtDetay_padding"
                android:text="@string/txtDetay"
                android:textColor="@color/activity_kisi_detay"
                android:textSize="@dimen/activity_kisi_detay_txtDetay_textSize" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>